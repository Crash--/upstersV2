{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Media admin section</h1><a href="{{ path('admin') }}">Back to admin root</a>
        <h2>Media list</h2>
        <table class="table table-striped table-hover">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Submitted</th>
                <th>Likes</th>
                <th></th>
            </tr>
            {% for media_single in media %}
                <tr>
                    <th>{{ media_single.id}}</th>
                    <th>{{ media_single.name}}</th>
                    <th>{{ media_single.category}}</th>
                    <th>{{ media_single.dateSubmitted|date}}</th>
                    <th>{{ media_single.likesCount}}</th>
                    <th><button><span></span>EDIT</button></th>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}