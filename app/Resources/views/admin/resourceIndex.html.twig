{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Resources admin section</h1><a href="{{ path('admin') }}">Back to admin root</a>
        <h2>Resources list</h2>
        <table class="table table-striped table-hover">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Submitted</th>
                <th>Likes</th>
                <th></th>
            </tr>
            {% for resource in resources %}
                <tr>
                    <th>{{ resource.id }}</th>
                    <th>{{ resource.name }}</th>
                    <th>{{ resource.category }}</th>
                    <th>{{ resource.website}}</th>
                    <th>{{ resource.likesCount}}</th>
                    <th><button><span></span>EDIT</button></th>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}