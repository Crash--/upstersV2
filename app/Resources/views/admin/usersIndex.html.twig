{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Users admin section</h1><a href="{{ path('admin') }}">Back to admin root</a>
        <h2>Users list</h2>
        <table class="table table-striped table-hover">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>EMail</th>
                <th>Registered</th>
                <th></th>
            </tr>
            {% for user in users %}
                <tr>
                    <th>{{ user.id }}</th>
                    <th>{{ user.name }}</th>
                    <th>{{ user.email}}</th>
                    <th>{{ user.dateRegistered|date}}</th>
                    <th><button><span></span>EDIT</button></th>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}